<Window x:Class="Assignment5V25.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment5V25"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Label -->

        <!-- TextBox -->
        <Label Content="Name" HorizontalAlignment="Left" Margin="112,37,0,0" VerticalAlignment="Top"/>
        <Label Content="Flight ID" HorizontalAlignment="Left" Margin="112,57,0,0" VerticalAlignment="Top"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="112,77,0,0" VerticalAlignment="Top"/>
        <Label Content="Flight time" HorizontalAlignment="Left" Margin="112,97,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="212,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="143" Grid.ColumnSpan="2" FontSize="11"/>
        <TextBox HorizontalAlignment="Left" Margin="212,81,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="143" Grid.ColumnSpan="2" FontSize="11"/>
        <TextBox HorizontalAlignment="Left" Margin="212,101,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="143" Grid.ColumnSpan="2" FontSize="11"/>
        <TextBox HorizontalAlignment="Left" Margin="212,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="143" Grid.ColumnSpan="2" FontSize="10" TextChanged="TextBox_TextChanged"/>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=0}" Margin="191,40,194,5" Grid.Column="1" SelectionChanged="ListBox_SelectionChanged" FontSize="11"/>
        <Button Grid.Column="1" Content="Add Plane" HorizontalAlignment="Left" Margin="95,28,0,0" Grid.Row="1" VerticalAlignment="Top" Width="123" Click="Button_Click"/>
        <Button Grid.Column="1" Content="Take Off" HorizontalAlignment="Left" Margin="243,28,0,0" Grid.Row="1" VerticalAlignment="Top" Width="85"/>
        <ListBox Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=0}" Margin="30,69,194,-191" Grid.Column="1"/>

    </Grid>
</Window>
